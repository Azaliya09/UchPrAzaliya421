<Page x:Class="UchAzaliya.Pages.MaterialsComponentsAccounting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UchAzaliya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialsComponentsAccounting">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
            <TextBlock>Фильтрация по складам:</TextBlock>
            <ComboBox x:Name="FiltrCb" Margin="5">
                <ComboBoxItem>Все</ComboBoxItem>
                <ComboBoxItem>Склад 1</ComboBoxItem>
                <ComboBoxItem>Склад 2</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <TabControl VerticalAlignment="Center">
            <TabItem Header="Материалы">
                <StackPanel>
                    <ScrollViewer Height="300">
                        <DataGrid x:Name="MaterialsDataGrid" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" />
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" />
                                <DataGridTextColumn Width="70" Header="Кол-во" Binding="{Binding Quantity}" />
                                <DataGridTextColumn Width="120" Header="Ед. измерения" Binding="{Binding UnitOfMeasure}" />
                                <DataGridTextColumn Header="Закупочная цена" Binding="{Binding PurchasePrice}" />
                                <DataGridTextColumn Width="90" Header="Поставщик" Binding="{Binding MainSupplier}" />
                                <DataGridTextColumn Header="Срок доставки" Binding="{Binding DeliveryTime}" />
                                <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="DeleteMBtn" Width="100">Удалить</Button>
                        <Button x:Name="EditMBtn" Width="100">Изменить</Button>
                        <Button x:Name="AddMBtn" Width="100">Добавить</Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Комплектующие">
                <StackPanel>
                    <ScrollViewer Height="300">
                        <DataGrid x:Name="ComponentsDataGrid" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" />
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" />
                                <DataGridTextColumn Width="70" Header="Кол-во" Binding="{Binding Quantity}" />
                                <DataGridTextColumn Width="120" Header="Ед. измерения" Binding="{Binding UnitOfMeasure}" />
                                <DataGridTextColumn Header="Закупочная цена" Binding="{Binding PurchasePrice}" />
                                <DataGridTextColumn Width="90" Header="Поставщик" Binding="{Binding MainSupplier}" />
                                <DataGridTextColumn Header="Срок доставки" Binding="{Binding DeliveryTime}" />
                                <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="DeleteCBtn" Width="100">Удалить</Button>
                        <Button x:Name="EditCBtn" Width="100">Изменить</Button>
                        <Button x:Name="AddCBtn" Width="100">Добавить</Button>
                    </StackPanel>
                    
                </StackPanel>
            </TabItem>
        </TabControl>
        <TextBlock VerticalAlignment="Bottom"  x:Name="SummaryTextBlock" Margin="10"/>
    </Grid>
</Page>
